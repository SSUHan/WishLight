<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.thewishlight.MySkyActivity" >

    <ViewFlipper
        android:id="@+id/viewFlipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:id="@+id/myskyLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/mainsky" >
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/downskyground" >

            <Button
                android:id="@+id/goRankBtn"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="300dp"
                android:background="@drawable/ranking"  />

            <Button
                android:id="@+id/goFriendBtn"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="145dp"
                android:layout_marginTop="220dp"
                android:background="@drawable/friend" />
        </RelativeLayout>
    </ViewFlipper>

</RelativeLayout>