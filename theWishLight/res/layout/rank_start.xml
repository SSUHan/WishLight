<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ViewFlipper
        android:id="@+id/rankingviewFlipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/collection4"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="70dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/star"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/star" />

                <TextView
                    android:id="@+id/starstar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="0" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="150dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/tropy1"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="@drawable/xtrophy" />

                <Button
                    android:id="@+id/tropy2"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="@drawable/xtrophy" />

                <Button
                    android:id="@+id/tropy3"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="@drawable/xtrophy" />

                <Button
                    android:id="@+id/tropy4"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="@drawable/xtrophy" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="14dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/tropy5"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="@drawable/xtrophy" />

                <Button
                    android:id="@+id/tropy6"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="@drawable/xtrophy" />

                <Button
                    android:id="@+id/tropy7"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="@drawable/xtrophy" />

                <Button
                    android:id="@+id/tropy8"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="@drawable/xtrophy" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rankingroom"
            android:orientation="vertical" >
        </LinearLayout>
    </ViewFlipper>

</LinearLayout>